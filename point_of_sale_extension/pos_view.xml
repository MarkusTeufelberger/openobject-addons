<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_pos_pos_form_ext1">
            <field name="name">pos.order.form.ext1</field>
            <field name="model">pos.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <button name="%(point_of_sale.pos_payment)d" position="replace">
                    <button name="%(pos_payment2)d"
                        string="Ma_ke Payment"
                        type="action" states="draft"/>
                </button>
            </field>
        </record>

        <record model="ir.ui.view" id="view_pos_pos_form_ext2">
            <field name="name">pos.order.form.ext2</field>
            <field name="model">pos.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" on_change="onchange_partner_pricelist(partner_id)" position="replace">
                    <field name="partner_id" on_change="onchange_partner_pricelist(partner_id)" select="1"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_pos_pos_form_ext3">
            <field name="name">pos.order.form.ext3</field>
            <field name="model">pos.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <field name="payment_id" position="after">
                    <field name="journal_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_pos_pos_form_ext4">
            <field name="name">pos.order.form.ext4</field>
            <field name="model">pos.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <field name="name" select="1" position="replace"/>
            </field>
        </record>

        <record model="ir.ui.view" id="view_pos_pos_form_ext5">
            <field name="name">pos.order.form.ext5</field>
            <field name="model">pos.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <field name="date_order" select="1" position="replace"/>
            </field>
        </record>

        <record model="ir.ui.view" id="view_pos_pos_form_ext6">
            <field name="name">pos.order.form.ext6</field>
            <field name="model">pos.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <field name="date_validity" position="replace"/>
            </field>
        </record>

        <record model="ir.ui.view" id="view_pos_pos_form_ext7">
            <field name="name">pos.order.form.ext7</field>
            <field name="model">pos.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <form string="Sales Order POS" position="inside">
                    <group colspan="3" col="6">
                        <field name="name" select="1"/>
                        <field name="date_order" select="1"/>
                        <field name="date_validity" />
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_pos_pos_form_ext8">
            <field name="name">pos.order.form.ext8</field>
            <field name="model">pos.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <field name="price_unit" position="after">
                    <field name="price_unit_vat" readonly="1"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_pos_pos_form_ext9">
            <field name="name">pos.order.form.ext9</field>
            <field name="model">pos.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <field name="price_subtotal" position="after">
                    <field name="price_subtotal_vat" readonly="1"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_pos_order_tree_ext1">
            <field name="name">Sales ext1</field>
            <field name="model">pos.order</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="partner_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_pos_order_line_ext1">
            <field name="name">Sale lines ext1</field>
            <field name="model">pos.order.line</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_line"/>
            <field name="arch" type="xml">
                <field name="product_id" position="before">
                    <field name="partner_id" readonly="1" select="1"/>
                    <field name="order_id" readonly="1" select="2"/>
                    <field name="state" readonly="1" select="2"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_pos_order_line_ext2">
            <field name="name">Sale lines ext2</field>
            <field name="model">pos.order.line</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_line"/>
            <field name="arch" type="xml">
                <field name="price_unit" position="after">
                    <field name="price_unit_vat" readonly="1"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_pos_order_line_ext3">
            <field name="name">Sale lines ext3</field>
            <field name="model">pos.order.line</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_line"/>
            <field name="arch" type="xml">
                <field name="price_subtotal" position="after">
                    <field name="price_subtotal_vat" readonly="1"/>
                </field>
            </field>
        </record>


        <!-- Shortcuts -->
        <act_window name="TPV sales"
                    domain="[('partner_id', '=', active_id)]"
                    context="{'partner_id': active_id}"
                    res_model="pos.order"
                    src_model="res.partner"
                    id="act_partner_2_pos_orders"/>

        <act_window name="TPV sales lines"
                    domain="[('partner_id', '=', active_id)]"
                    context="{'partner_id': active_id}"
                    res_model="pos.order.line"
                    src_model="res.partner"
                id="act_partner_2_pos_order_lines"/>
    </data>
</openerp>
