<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_mgmtsystem_action_graph">
            <field name="name">Actions By Type - Graph</field>
            <field name="model">mgmtsystem.action</field>
            <field name="type">graph</field>
            <field name="arch" type="xml">
                <graph string="Actions By Type" type="pie">
                    <field name="type_action"/>
                    <field name="id"/>
                </graph>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_mgmtsystem_action">
            <field name="res_model">mgmtsystem.action</field>
            <field name="view_type">form</field>
            <field name="view_mode">graph,tree,form</field>
            <field name="view_id" ref="view_mgmtsystem_action_graph"/>
            <field name="domain">[('state', 'in', ('open'))]</field>
        </record>

        <record id="board_mgmtsystem_action_form" model="ir.ui.view">
            <field name="name">board.mgmtsystem.action.form</field>
            <field name="model">board.board</field>
            <field name="inherit_id" ref="mgmtsystem.board_mgmtsystem_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="/form/hpaned/child2" position="inside">
		    <action colspan="4" name="%(action_mgmtsystem_action)d" string="Actions"/>
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>
