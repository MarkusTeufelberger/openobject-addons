e="1"/>                    <field name="date_deadline" invisible="1"/>                    <field name="date_closed" invisible="1"/>                    <field name="state"/>				</tree>			</field>		</record>		<act_window 			domain="[('contract_id', '=', active_id)]" 			id="eagle_action_contract_2_corr_claims"			name="Corr. claims" 			view_id="eagle_view_claims_tree"			res_model="crm.claim" 			src_model="eagle.contract"/>			</data></openerp>