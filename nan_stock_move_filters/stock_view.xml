<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
	<!-- stock.move.form -->
	<record id="view_move_form_location_id" model="ir.ui.view">
		<field name="name">stock.move.form.location_id</field>
		<field name="model">stock.move</field>
		<field name="type">form</field>
		<field name="inherit_id" ref="stock.view_move_form"/>
		<field name="arch" type="xml">
			<field name="location_id" position="replace">
				<field name="location_id" context="{'active_product_id': product_id, 'active_prodlot_id': prodlot_id, 'active_move_id': id, 'active_type': 'source'}" on_change="onchange_location_id(location_id, context)" select="1"/>
			</field>
		</field>
	</record>
	<record id="view_move_form_location_dest_id" model="ir.ui.view">
		<field name="name">stock.move.form.location_dest_id</field>
		<field name="model">stock.move</field>
		<field name="type">form</field>
		<field name="inherit_id" ref="stock.view_move_form"/>
		<field name="arch" type="xml">
			<field name="location_dest_id" position="replace">
				<field name="location_dest_id" context="{'active_product_id': product_id, 'active_prodlot_id': prodlot_id, 'active_move_id':id, 'active_type': 'destination'}" select="1"/>
			</field>
		</field>
	</record>
	<record id="view_move_form_product_id" model="ir.ui.view">
		<field name="name">stock.move.form.product_id</field>
		<field name="model">stock.move</field>
		<field name="type">form</field>
		<field name="inherit_id" ref="stock.view_move_form"/>
		<field name="arch" type="xml">
			<field name="product_id" position="replace">
				<field name="product_id" context="{'location': location_id}" on_change="onchange_product_id(product_id, location_id, location_dest_id)" colspan="4" select="1"/>
			</field>
		</field>
	</record>

	<!-- stock.picking.form -->
