                <field name="code"/>
            </form>
         </field>
   </record>
   
   <record model="ir.ui.view" id="view_dm_reject_tree">
        <field name="name">dm.as.reject.tree</field>
        <field name="model">dm.as.reject</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Rejects">
