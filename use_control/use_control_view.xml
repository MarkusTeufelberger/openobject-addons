<?xml version="1.0"?>
<openerp>
<data>

    <menuitem
        id="menu_use"
        name="On Demand Control"
        parent="base.menu_administration"
        sequence="0"/>

    <record model="ir.ui.view" id="use_control_time_user_graph">
        <field name="name">use.control.time.month.user.graph</field>
        <field name="model">use.control.time.month.user</field>
        <field name="type">graph</field>
        <field name="arch" type="xml">
            <graph string="Hours of Use" type="bar">
                <field name="user_id" operator="+"/>
                <field name="duration" operator="+" widget="float_time"/>
            </graph>
        </field>
    </record>
    <record model="ir.ui.view" id="use_control_time_user_form">
        <field name="name">use.control.time.month.user.form</field>
        <field name="model">use.control.time.month.user</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Hours of Use">
                <field name="date" select="1"/>
                <field name="user_id" select="1"/>
                <field name="duration" widget="float_time"/>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="use_control_time_user_tree">
        <field name="name">use.control.time.month.user.tree</field>
        <field name="model">use.control.time.month.user</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Hours of Use">
                <field name="date"/>
                <field name="user_id"/>
                <field name="duration" sum="Total Hours" widget="float_time"/>
            </tree>
        </field>
    </record>
    <record id="action_control_time_user_tree" model="ir.actions.act_window">
        <field name="name">Hours per User</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">use.control.time.month.user</field>
        <field name="view_type">form</field>
        <field name="view_mode">graph,tree</field>
    </record>
    <menuitem
        action="action_control_time_user_tree"
        id="menu_control_time_user_tree"
        parent="menu_use"/>


    <record model="ir.ui.view" id="use_control_time_graph">
        <field name="name">use.control.time.month.graph</field>
        <field name="model">use.control.time.month</field>
        <field name="type">graph</field>
        <field name="arch" type="xml">
            <graph string="Hours of Use" type="bar">
                <field name="date" operator="+"/>
                <field name="duration" operator="+" widget="float_time"/>
            </graph>
        </field>
    </record>
    <record model="ir.ui.view" id="use_control_time_tree">
        <field name="name">use.control.time.month.tree</field>
        <field name="model">use.control.time.month</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Hours of Use">
                <field name="date" select="1"/>
                <field name="duration" sum="Total Hours" widget="float_time"/>
            </tree>
        </field>
    </record>
    <record id="action_control_time_tree" model="ir.actions.act_window">
        <field name="name">Hours per Month</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">use.control.time.month</field>
        <field name="view_type">form</field>
        <field name="view_mode">graph,tree</field>
    </record>
    <menuitem action="action_control_time_tree"
        id="menu_control_time_tree"
        parent="menu_use"/>


</data>
</openerp>
