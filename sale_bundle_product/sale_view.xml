<openerp>
    <data>
    
        <!-- INHERITED VIEW FOR THE OBJECT : sale_order -->

        <record id="sale_bundle_product_sale_order_view_form" model="ir.ui.view">
            <field name="name">sale_bundle_product.sale_order.view_form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field eval="16" name="priority"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <data>
                    <page string="History" groups="base.group_extended" position="after">
                        <page string="Choosen Configuration" groups="base.group_extended" >
                            <field name="so_line_item_set_ids" nolabel="1"/>
                        </page>
                    </page>
                </data>
            </field>
        </record>

        <record id="sale_bundle_product_sale_order_view_form2" model="ir.ui.view">
            <field name="name">sale_bundle_product.sale_order.view_form2</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/notebook/page/field[@name='order_line']/form/notebook/page/field[@name='product_id']" position="attributes">
                    <attribute name="colspan">2</attribute>
                </xpath>    
                <xpath expr="/form/notebook/page/field[@name='order_line']/form/notebook/page/field[@name='product_id']" position="after">
                    <button name="%(action_configure_product)d" string="Configure Product"
                        type="action" icon="gtk-execute" colspan="2"/>
                    <newline/>
                </xpath>    
            </field>
        </record>
    </data>
</openerp>
