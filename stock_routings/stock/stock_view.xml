<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    	<record id="stock_picking_form_add_btm" model="ir.ui.view">
            <field name="name">Picking Form add btn for change planned date</field>
            <field name="model">stock.picking</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_picking_in_form" />
            <field name="arch" type="xml">
            	<field name="min_date" select="2" readonly="1" position="after">
            		<button name="%(change_planned_date)d" states="unproduction,assigned,underway" string="Change Date" type="action"/>
            	</field>
            </field>
        </record>
	
		<!--  Add Picking and Syatem date in incoming product Picking  --> 
		
		 <record id="stock_picking_form_add_date_fields" model="ir.ui.view">
            <field name="name">Picking Form add State in date fields</field>
            <field name="model">stock.picking</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_picking_in_form" />
            <field name="arch" type="xml">
                <field name="backorder_id" select="2" readonly="1" position="after">
                	<field name="picking_date"/>
                	<field name="system_date" />
                </field>
            </field>
        </record>
	
    	<record id="stock_picking_form_add_page" model="ir.ui.view">
            <field name="name">Picking Form add Transport Page in Incoming</field>
            <field name="model">stock.picking</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_picking_in_form" />
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Transport Details">
                        <field name="bl_no" />
                        <field name="vessel_name" />
                        <field name="voyage_number" />
                        <field name="shipping_company" />
                        <field name="departure_date" />
                        <field name="arrival_date" />
                        <field name="port_of_departure" />
                        <field name="port_of_arrival" />
                        <field name="container_id" />
                        <newline/>
                        <field name="container_seal" />
                        <field name="loading_code" />
                        <newline/>
                        <field name="myfab_description" colspan="4"/>
                    </page>
                    <page string="History">
                    	<field name="stock_history_lines" colspan="4" nolabel="1"/>
                    </page>
                </notebook>
            </field>
        </record>   	
    	
    	<record id="stock_move_form_add_btm" model="ir.ui.view">
            <field name="name">Moves Form add btn for change planned date</field>
            <field name="model">stock.picking</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="priority">19</field>
            <field name="arch" type="xml">
            	<field name="min_date" select="2" position="after">
            		<button name="%(change_planned_date)d" states="waiting,confirmed,assigned,underway" string="Change Date" type="action"/>
            	</field>
            </field>
        </record>
        
        <record id="stock_move_form_add_picking_date" model="ir.ui.view">
            <field name="name">Moves Form add Picking And System date</field>
            <field name="model">stock.picking</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="priority">17</field>
            <field name="arch" type="xml">
            	<field name="min_date" select="2" position="after">
            		<field name="picking_date"/>
            		<field name="system_date"/>
            	</field>
            </field>
        </record>
        
      <!--     Add Picking date in Internal move -->
      
        <record id="stock_view_picking_form_add_picking_date" model="ir.ui.view">
            <field name="name">Internal Move From view Add Picking Date</field>
            <field name="model">stock.picking</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <field name="date_planned" position="after">
                    <field name="picking_date"/>
                </field>
            </field>
        </record>
        
        
        <!-- Add Picking date in Moves of Incoming Product Picking form -->
        
        <record id="stock_view_moves_form_add_picking_date" model="ir.ui.view">
            <field name="name">Incoming Prod Internal Move From view Add Picking Date</field>
            <field name="model">stock.picking</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_picking_in_form" />
            <field name="arch" type="xml">
            	<field colspan="4" name="move_lines" nolabel="1" widget="one2many_list" default_get="{'move_line':move_lines, 'address_in_id': address_id}" position="replace">
                    <field colspan="4" name="move_lines" nolabel="1" widget="one2many_list" default_get="{'move_line':move_lines, 'address_in_id': address_id}">
	                    <tree string="Stock Moves">
	                        <field name="product_id"/>
	                        <field name="product_qty"/>
	                        <field name="product_uom"/>
	                        <field name="location_dest_id"/>
	                        <field name="prodlot_id"/>
	                        <field name="state"/>
	                    </tree>
	                    <form string="Stock Moves">
	                        <separator colspan="4" string="Move Information"/>
	                        <field name="location_id" select="1" domain="[('usage','&lt;&gt;','view')]"/>
	                        <field domain="[('usage','=','internal')]" name="location_dest_id" select="1"/>
	                        <field colspan="4" context="location=location_id" name="product_id" on_change="onchange_product_id(product_id, location_id, location_dest_id)" select="1"/>
	                        <field name="product_qty" select="1"/>
	                        <field name="product_uom" select="1"/>
	                        <field groups="product.group_uos" name="product_uos"/>
	                        <field groups="product.group_uos" name="product_uos_qty"/>
	                        <field colspan="4" invisible="1" name="name" select="1"/>
	                        <field groups="base.group_extended" name="date_planned"/>
	                        <field name="picking_date"/>
	                        <newline/>
	                        <newline/>
	                        <field groups="base.group_extended" name="product_packaging"/>
	                        <newline/>                                    
	                        <field name="prodlot_id" select="1"
	                            context="{'location_id':location_id, 'product_id':product_id}"
	                            domain="[('product_id','=',product_id)]"
	                            on_change="onchange_lot_id(prodlot_id,product_qty, location_id)"/>
	                        <field groups="base.group_extended" name="tracking_id" select="1"/>
	                        <newline/>
	                        <label/>
	                        <button groups="base.group_extended" name="%(stock.track_line)d" string="Split in production lots" type="action"/>
	                        <separator colspan="4" string="Move State"/>
	                        <field name="state" select="1"/>
	                        <group>
	                            <button name="force_assign" states="confirmed" string="Force Availability" type="object"/>
	                            <button name="cancel_assign" states="assigned" string="Cancel Availability" type="object"/>
	                            <button name="action_cancel" states="assigned" string="Cancel" type="object"/>
	                        </group>
	                    </form>
	                </field>
               	</field>
            </field>
       </record>
        
        <record id="stock_move_form_date" model="ir.ui.view">
            <field name="name">Moves Form make planned date readonly</field>
            <field name="model">stock.picking</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
