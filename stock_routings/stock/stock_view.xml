        <record id="view_routing_tree" model="ir.ui.view">
            <field name="name">stock.routing.tree</field>
            <field name="model">stock.routing</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Stock Routing">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="kind_transport"/>
                    <field name="port_of_loading"/>
                </tree>
            </field>
        </record>
        
        <record id="view_routing_form" model="ir.ui.view">
            <field name="name">stock.routing.form</field>
            <field name="model">stock.routing</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Stock Routing">
                	<field name="id" invisible="1"/>
                    <field name="name"/>
                    <field name="description" colspan="4"/>
                    <field name="kind_transport"/>
                    <field name="port_of_loading"/>
                    <field name="segment_sequence_ids" widget="one2many_list" colspan="4" nolabel= "1"  context="{'port_of_loading':port_of_loading,'routing_id':id}" >
                    	<form string="Segment sequence">
		                    <field name="sequence"/>
		                    <field name="name"/>
		                    <field name="routing_id" invisible="1"/>
		                    <field name="port_of_loading" context="{'routing_id':routing_id}"/>
		                    <field name="port_of_destination"/>
		              		<field name="kind_transport"/>
		                    <field name="chained_delay"/>
                		</form>
                		<tree string="Segment sequence">
		                    <field name="sequence"/>
		                    <field name="name"/>
		                    <field name="port_of_loading"/>
		                    <field name="port_of_destination"/>
		              		<field name="kind_transport"/>
		                    <field name="chained_delay"/>
		                </tree>
                    </field>
                </form>
            </field>
        </record>
        
        <record id="action_routing_form" model="ir.actions.act_window">
            <field name="name">Routings</field>
            <field name="res_model">stock.routing</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_routing_tree"/>
        </record>
        <menuitem action="action_routing_form" id="menu_action_routing_form" parent="stock.menu_stock_configuration"/>
        
