<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	
    	<record id="purchase_form_add_group_cancle_button" model="ir.ui.view">
            <field name="name">Purchase Order Form add Manager Group Cancle Button</field>
            <field name="model">purchase.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <button name="purchase_cancel" states="draft,confirmed,wait_auth" string="Cancel Purchase Order" icon="gtk-cancel" position="replace">
                    <button name="purchase_cancel" 
                        states="draft,confirmed,wait_auth,rfq" 
                        string="Cancel Purchase Order" 
                        icon="gtk-cancel"
                        groups="purchase.group_purchase_manager"
                        />
                </button>
            </field>
        </record>

        <record id="purchase_form_add_state_in_confirm_button" model="ir.ui.view">
            <field name="name">Purchase Order Form State in Confirm Button</field>
            <field name="model">purchase.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <button name="purchase_confirm" states="draft" string="Confirm Purchase Order" icon="gtk-execute" position="replace">
                    <button name="purchase_confirm" states="rfq" string="Confirm Purchase Order" icon="gtk-execute"/>
                </button>
            </field>
        </record>
        
    	 <record id="purchase_form_add_rfq_button" model="ir.ui.view">
            <field name="name">Purchase Order Form add RFQ Button</field>
            <field name="model">purchase.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <button name="purchase_approve" states="confirmed" string="Approved by Supplier" icon="gtk-ok" position="after" >
                    <button name="button_rfq" states="draft" string="Request for Quotation" type="object"/>
                </button>
            </field>
        </record>
    	
