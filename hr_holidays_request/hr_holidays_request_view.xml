			<tree string="Employee Holidays" position="replace" >
			<tree string="Employee holidays">
				<field name="name"/>
				<field name="state"/>
				<field name="date_from1"/>
				<field name="date_to1"/>
			</tree>
			</tree>
		</field>
	</record>

