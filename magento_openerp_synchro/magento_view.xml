<?xml version="1.0"?>
<!--  The defined view are inherited to add the Magento fields -->
<openerp>
	<data>

		<menuitem id="menu_main_magento" name="Magento"/>

		<!-- Product View -->
		<record model="ir.ui.view" id="product_normal_form_view">
			<field name="name">product.product.form.magento</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="product.product_normal_form_view" />
			<field name="type">form</field>
			<field name="arch" type="xml">
				<page position="after" string="Information">
					<page position="inside" string="Magento">
						<separator string="Magento Information" colspan="4"/>
						<field name="exportable" position="inside"/>
						<field name="magento_id" position="inside" readonly="1"/>
						<field name="updated" position="inside" readonly="1"/>
						<field name="magento_tax_class_id" position="inside"/>
						<separator string="Product Image" colspan="4"/>
						<field name="image" widget="image"/>
						<field name="image_name" readonly="1"/>
						<field name="image_label"/>
					</page>
				</page>
			</field>
		</record>
		<record model="ir.ui.view" id="product_product_tree_view">
			<field name="name">product.product.tree.magento</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="product.product_product_tree_view" />
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Products">
					<field name="exportable" position="after"/>
					<field name="magento_id" position="inside" readonly="1"/>
					<field name="updated" position="inside" readonly="1"/>
				</tree>
			</field>
		</record>
		
		
		<!-- Category View -->
		<record model="ir.ui.view" id="product_category_form_view">
			<field name="name">product.category.form.magento</field>
			<field name="model">product.category</field>
			<field name="inherit_id" ref="product.product_category_form_view" />
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Product Categories">
					<separator string="Magento Information" colspan="4" position="after"/>
					<field name="exportable" position="inside"/>
					<field name="magento_id" position="inside" readonly="1"/>
					<field name="updated" position="inside" readonly="1"/>
					<newline/>
					<field name="magento_product_type" position="inside"/>
					<newline/>
					<field name="magento_product_attribute_set_id" position="inside"/>
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="product_category_tree_view">
			<field name="name">product.category.tree.magento</field>
			<field name="model">product.category</field>
			<field name="inherit_id" ref="product.product_category_list_view" />
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Product Categories">
					<field name="exportable" position="after"/>
					<field name="magento_id" position="inside" readonly="1"/>
					<field name="updated" position="inside" readonly="1"/>
				</tree>
			</field>
		</record>
		
		
		<!-- Pricelist View -->
		<record model="ir.ui.view" id="product_pricelist_view">
			<field name="name">product.pricelist.form.magento</field>
			<field name="model">product.pricelist</field>
			<field name="inherit_id" ref="product.product_pricelist_view" />
			<field name="type">form</field>
			<field name="arch" type="xml">
				<field name="currency_id" select="1" position="after">
					<field name="magento_id"/>
					<field name="magento_default"/>
				</field>
			</field>
		</record>
		<record model="ir.ui.view" id="product_pricelist_view_tree">
			<field name="name">product.pricelist.tree.magento</field>
			<field name="model">product.pricelist</field>
			<field name="inherit_id" ref="product.product_pricelist_view_tree" />
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Products Price List">
					<field name="magento_id" position="after"/>
					<field name="magento_default" position="inside"/>
				</tree>
			</field>
		</record>
		
		
		<!-- Sale View -->
		<record model="ir.ui.view" id="view_order_form">
			<field name="name">sale.order.form.magento</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="type">form</field>
			<field name="arch" type="xml">
				<page position="after" string="Sale Order">
					<page position="inside" string="Magento">
						<separator string="Magento Information" colspan="4"/>
						<field name="magento_id" position="inside"/>
						<field name="has_error" position="inside"/>
					</page>
				</page>
			</field>
		</record>
		<record model="ir.ui.view" id="view_order_tree">
			<field name="name">sale.order.tree.magento</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_tree" />
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Sales orders">
					<field name="magento_id" position="after" />
					<field name="has_error" position="after" />
				</tree>
			</field>
		</record>
		
		
		<!-- Partner View -->
		<record model="ir.ui.view" id="view_magento_partner_form">
			<field name="name">res.partner.form.magento</field>
			<field name="model">res.partner</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="base.view_partner_form" />
			<field name="arch" type="xml">
				<page position="after" string="General">
					<page position="inside" string="Magento">
						<separator string="Magento Information" colspan="4"/>
						<field name="magento_id" position="inside" readonly="1"/>
					</page>
				</page>
			</field>
		</record>
		<record model="ir.ui.view" id="view_partner_tree">
			<field name="name">res.partner.tree.magento</field>
			<field name="model">res.partner</field>
			<field name="type">tree</field>
			<field name="inherit_id" ref="base.view_partner_tree" />
			<field name="arch" type="xml">
				<tree string="Partners">
					<field name="magento_id" position="after"/>
				</tree>
			</field>
		</record>
		
		
		<!-- Shop View -->
		<record model="ir.ui.view" id="view_shop_tree">
			<field name="name">sale.shop.tree.magento</field>
			<field name="model">sale.shop</field>
			<field name="inherit_id" ref="sale.view_shop_tree" />
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Sale Shop">
					<field name="magento_flag" position="after" />
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="view_shop_form">
			<field name="name">sale.shop.form.inherit</field>
			<field name="model">sale.shop</field>
			<field name="inherit_id" ref="sale.view_shop_form" />
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Sale Shop">
					<separator string="Magento Information" colspan="4"
						position="after" />
					<field name="magento_flag" position="after" />
				</form>
			</field>
		</record>
		
		
		<!-- Web Action / Menuitem / View	-->
		<record model="ir.actions.act_window" id="action_magento_web_form">
			<field name="name">Magento Web</field>
			<field name="res_model">magento.web</field>
			<field name="view_mode">tree,form</field>
		</record>
		<menuitem name="Magento Web" id="menu_magento_web_form" parent="menu_main_magento"
			action="action_magento_web_form" />
		<record model="ir.ui.view" id="view_magento_web_form">
			<field name="name">magento.web.form</field>
			<field name="model">magento.web</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Magento web">
					<separator string="Magento Information" colspan="4" />
					<field name="magento_name" />
					<newline />
					<field name="magento_url" />
					<newline />
					<field name="magento_flag" />
					<newline />
					<field name="auto_update" />
					<separator string="Magento Api Information" colspan="4" />
					<field name="api_user" />
					<newline />
					<field name="api_pwd" />
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="view_magento_web_tree">
			<field name="name">magento.web.tree</field>
			<field name="model">magento.web</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Magento web">
					<field name="magento_name" />
					<field name="magento_url" />
					<field name="magento_flag" />
					<field name="auto_update" />
				</tree>
			</field>
		</record>
	</data>
</openerp>