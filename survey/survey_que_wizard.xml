<?xml version="1.0" ?>
<openerp>
	<data>
		<record id="view_survey_question_message" model="ir.ui.view">
            <field name="name">Survey Question</field>
            <field name="model">survey.question.wiz</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Your Messages">
                    <field name="name" nolabel="1" colspan="4"/>
                </form>
            </field>
        </record>

        <record id="action_view_survey_question_message" model="ir.actions.act_window">
            <field name="name">Survey Question</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">survey.question.wiz</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

		<record id="view_survey_name" model="ir.ui.view">
            <field name="name">Survey</field>
            <field name="model">survey.name.wiz</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Survey">
                    <separator colspan="4" string="Selct Survey"/>
                    <field name="survey_id" colspan="4" />
                    <newline/>
                    <separator colspan="4"/>
                    	<label align="0.0" colspan="2" string=""/>  
                        <button colspan="1" icon="gtk-cancel" special="cancel" string="Cancel"/>
						<button colspan="1" icon="gtk-go-forward" name="action_next" string="Next" type="object" />
                </form>
            </field>
        </record>

        <record id="action_view_survey_name" model="ir.actions.act_window">
            <field name="name">Start to Give Survey Response</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">survey.name.wiz</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
		<menuitem name="Start to Give Survey Response" id = "menu_run_survey_form" action="action_view_survey_name" parent = "menu_survey_action"/>
   		
	</data>
</openerp>