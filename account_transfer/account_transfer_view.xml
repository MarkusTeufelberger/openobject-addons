<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_transfer_tree">
            <field name="name">account.transfer.tree</field>
            <field name="model">account.voucher</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree colors="blue:state in ('draft');gray:state in ('cancel')" string="Transfer Entries">
                    <field name="date"/>
                    <field name="number"/>
                    <field name="reference"/>
                    <!--field name="partner_id"/-->
                    <field name="journal_id" string="Source Journal"/>
                    <field name="period_id" groups="base.group_extended" invisible="context.get('visible', True)"/>
                    <field name="type" invisible="context.get('visible', True)"/>
                    <field name="amount" sum="Total Amount"/>
                    <field name="target_journals"/>
                    <field name="currency_id"/>
                    <field name="state"/>
                        <button name="action_confirm" string="Confirm" states="draft" icon="terp-document-new" type="object"/>
                        <button name="action_approve" string="Approbation 1" groups="account.group_account_manager" states="proforma" attrs="{'invisible':[('approve_user_id','>',0)]}" icon="terp-camera_test" type="object"/>
                        <button name="action_approve_final" string="Final Approbation" groups="account.group_account_manager" states="proforma" attrs="{'invisible':[('approve_user_id','=',0)]}" icon="terp-camera_test" type="object"/>                    <field name="approve_user_id"/>
                    <field name="approve2_user_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_transfer_form">
            <field name="name">account.transfer.form</field>
            <field name="model">account.voucher</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Accounting Voucher">
                    <field name="company_id" widget="selection" groups="base.group_multi_company"/>
                    <field name="name" groups="base.group_multi_company"/>
                    
                    <field name="type" invisible="1"/>
                    <field name="transfer" invisible="1"/>
                    <field name="account_id" invisible="1"/>
                    <field name="partner_id" invisible="1"/>
                    <field name="tax_id" invisible="1"/>

                    <group col="2" colspan="2">
                        <field name="journal_id" string="Source" widget="selection" select="1" domain="[('type','in',('cash','bank'))]" on_change="onchange_journal_transfer(journal_id, line_ids, tax_id, amount, partner_id)"/>
                        <group colspan="2" col="6">
                            <field name="balance_start" readonly="1"/>
                            <field name="amount" string="Amount to Transfer"/>
                            <field name="currency_transfer_id" nolabel="1" widget="selection"/>
                        </group>
                    </group>
                    
                    <group col="2" colspan="2">
                        <field name="date" on_change="onchange_date(partner_id, journal_id, amount, currency_id, type, date)"/>
                        <field name="reference" select="1"/>
                    </group>

                    <notebook colspan="4">
                        <page string="Voucher Entry">
                            <field name="line_ids" on_change="onchange_price_transfer(line_ids, tax_id, amount, partner_id)" default_get="{'journal_id':journal_id, 'type':type, 'partner_id':partner_id}" colspan="4" nolabel="1">
                                <tree string="Voucher Items" editable="bottom">

                                    <field name="account_journal_id" string="Target" widget="selection" domain="[('type','in',('cash','bank'))]" on_change="onchange_journal_transfer(account_journal_id,parent.journal_id,parent.amount,parent.line_ids)"/>
                                    <field name="balance_start" readonly="1" groups="account.group_account_manager"/>
                                    <field name="amount" on_change="onchange_line_price_transfer(amount,exchange_rate)"/>
                                    <field name="currency_id" widget="selection" readonly="1" nolabel="1"/>
                                    <field name="exchange_rate" on_change="onchange_line_price_transfer(amount,exchange_rate)" attrs="{'readonly':[('exchange_rate','=',1)]}"/>
                                    <field name="account_analytic_id" groups="analytic.group_analytic_accounting"/>
                                    <field name="name"/>

                                    <field name="currency_amount" sum="Total Currency Amount" invisible="1"/>
                                    <field name="account_id" invisible="1"/>
                                    <field name="type" invisible="1"/>
                                </tree>
                            </field>
                            <group col="2" colspan="3">
                                <separator string="Internal Notes" colspan="2"/>
                                <field name="narration" colspan="2" nolabel="1"/>
                            </group>
                            <group col="2" colspan="1">
                                <group col="2" colspan="1">
                                    <separator string="Other Information" colspan="2"/>
                                    <field name="number"/>
                                    <field name="approve_user_id" widget="selection" readonly="1"/>
                                    <field name="approve2_user_id" widget="selection" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Journal Items" groups="base.group_extended" attrs="{'invisible': [('state','!=','posted')]}">
                            <group col="6" colspan="4">
                                <field name="period_id"/>
                                <field name="audit"/>
                            </group>
                            <field name="move_ids" colspan="4" nolabel="1" readonly="1">
                               <tree string="Journal Items">
                                   <field name="move_id"/>
                                   <field name="ref"/>
                                   <field name="date"/>
                                   <field name="statement_id"/>
                                   <field name="partner_id"/>
                                   <field name="account_id"/>
                                   <field name="name"/>
                                   <field name="debit"/>
                                   <field name="credit"/>
                                   <field name="state"/>
                                   <field name="reconcile_id"/>
                               </tree>
                            </field> 
                        </page>
                    </notebook>
                    <group col="10" colspan="4">
                        <field name="state"/>
                        <button name="cancel_voucher" string="Cancel" states="draft,proforma" icon="gtk-cancel"/>
                        <button name="cancel_voucher" string="Cancel" states="posted" type="object" icon="terp-stock_effects-object-colorize" confirm="Are you sure to unreconcile this record ?"/>
                        <button name="action_confirm" string="Confirm" states="draft" icon="terp-document-new" type="object"/>
                        <button name="action_approve" string="Approbation 1" groups="account.group_account_manager" states="proforma" attrs="{'readonly':[('approve_user_id','>',0)]}" icon="terp-camera_test" type="object"/>
                        <button name="action_approve_final" string="Final Approbation" groups="account.group_account_manager" states="proforma" attrs="{'readonly':[('approve_user_id','=',0)]}" icon="terp-camera_test" type="object"/>
                        <button name="action_cancel_draft" string="Set to Draft" states="cancel" type="object" icon="terp-stock_effects-object-colorize"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_transfer_filter" model="ir.ui.view">
            <field name="name">account.transfer.select</field>
            <field name="model">account.voucher</field>
            <field name="type">search</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <search string="Search Transfers">
                    <group col='8' colspan='4'>
                        <filter icon="terp-document-new" string="Draft" domain="[('state','=','draft')]" help="Draft Vouchers"/>
                        <filter icon="terp-camera_test" string="Confirmed" domain="[('state','=','proforma')]" help="Posted Vouchers"/>
                        <filter icon="terp-camera_test" string="Posted" domain="[('state','=','posted')]" help="Posted Vouchers"/>
                        <separator orientation="vertical"/>
                        <filter icon="terp-gtk-jump-to-ltr" string="To Review" domain="[('state','=','posted')]" groups="base.group_extended" help="To Review"/>
                        <separator orientation="vertical"/>
                        <!--filter string="Transfers" name="transfer" icon="terp-personal" domain="[('transfer','=',1)]" help="Cash and Bank Transfers"/-->
                        <!--separator orientation="vertical"/-->
                        <field name="date"/>
                        <field name="number"/>
                        <!--field name="partner_id"/-->
                    </group>
                    <group col='8' colspan='4'>
                        <field name="journal_id" widget="selection" context="{'journal_id': self, 'set_visible':False}" />
                        <field name="period_id" groups="base.group_extended"/>
                    </group>
                    <newline/>
                    <group expand="0" string="Extended Filters..." col='8' colspan='4'>
                        <field name="reference"/>
                        <field name="name"/>
                        <field name="narration"/>
                        <field name="amount"/>
                        <field name="approve_user_id"/>
                        <field name="approve2_user_id"/>
                   </group>
                   <newline/>
                    <group expand="0" string="Group By..." colspan="4" col="10">
                        <filter string="Partner" icon="terp-partner" domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter string="Journal" icon="terp-folder-orange" domain="[]" context="{'group_by':'journal_id'}"/>
                        <filter string="Period" icon="terp-go-month" domain="[]" context="{'group_by':'period_id','visible':True}"/>
                        <filter string="State" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_transfer_list">
            <field name="name">Cash and Bank Transfers</field>
            <field name="res_model">account.voucher</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('transfer','=',True)]</field>
            <field name="context">{'search_default_transfer':1,'transfer':1,'type':'payment'}</field>
            <field name="view_id" ref="view_transfer_tree"/>
            <field name="search_view_id" ref="view_transfer_filter"/>
        </record>
        <record id="action_transfer_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_transfer_tree"/>
            <field name="act_window_id" ref="action_transfer_list"/>
        </record>
        <record id="action_transfer_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_transfer_form"/>
            <field name="act_window_id" ref="action_transfer_list"/>
        </record>
        <menuitem action="action_transfer_list" id="account_transfer_menu" parent="account.menu_finance_bank_and_cash" 
                    string="Cash and Bank Transfers" sequence="10"/>
    </data>
</openerp>
