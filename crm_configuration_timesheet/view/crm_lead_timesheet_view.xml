<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_crm_lead_work_form">
            <field name="name">CRM - Lead Form - Add Timesheet</field>
            <field name="model">crm.case</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="crm_configuration.crm_case_form_view_leads"/>
            <field name="priority" eval="30"/>
            <field name="arch" type="xml">
                <xpath expr="/form/notebook/page[@string='History']" position="before">
                        <page string="Timesheet">
                            <field name="timesheet_ids" nolabel="1" mode="tree,form">
                                <tree string="Summary Work" editable="bottom">
                                    <field name="date"/>
                                    <field name="user_id"/>
                                    <field name="hours" widget="float_time"/>
                                    <field name="name"/>
                                </tree>
                                <form string="Summary Work">
                                    <field name="name" colspan="4"/>
                                    <field name="date"/>
                                    <field name="user_id"/>
                                    <field name="hours" widget="float_time"/>
                                </form>
                            </field>
                        </page>
                    </xpath>
            </field>
        </record>

    </data>
</openerp>
