<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="account_partner_ledger_view_webkit" model="ir.ui.view">
            <field name="name">Partner Ledger Webkit</field>
            <field name="model">account.report.partners.ledger.webkit</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report Options">
                    <separator string="Partner Ledger" colspan="4"/>
                    <label nolabel="1" colspan="4" string="This report allows you to print or generate a pdf of your partner ledger with details of all your payable/receivable account"/>
                    <newline/>
                    <field name="chart_account_id" widget="selection" colspan="4"/>
                    <field name="fiscalyear_id" on_change="onchange_fiscalyear(fiscalyear_id, period_to, date_to, until_date)"/>
                    <field name="target_move"/>
                    <field name="until_date"/>
                    <notebook tabpos="up" colspan="4">
                        <page string="Filters">
                            <field name="filter" on_change="onchange_filter(filter, fiscalyear_id)" colspan="4"/>
                            <separator string="Dates" colspan="4"/>
                            <field name="date_from" attrs="{'readonly':[('filter', '!=', 'filter_date')], 'required':[('filter', '=', 'filter_date')]}" colspan="4"/>
                            <field name="date_to" attrs="{'readonly':[('filter', '!=', 'filter_date')], 'required':[('filter', '=', 'filter_date')]}" colspan="4" on_change="onchange_date_to(fiscalyear_id, period_to, date_to, until_date)"/>
                            <separator string="Periods" colspan="4"/>
                            <field name="period_from" domain="[('fiscalyear_id', '=', fiscalyear_id)]" attrs="{'readonly':[('filter','!=','filter_period')], 'required':[('filter', '=', 'filter_period')]}" colspan="4"/>
                            <field name="period_to" domain="[('fiscalyear_id', '=', fiscalyear_id)]" attrs="{'readonly':[('filter','!=','filter_period')], 'required':[('filter', '=', 'filter_period')]}" colspan="4" on_change="onchange_period_to(fiscalyear_id, period_to, date_to, until_date)"/>
                        </page>
                        <page string="Partners Filters">
                            <field name="result_selection"/>
                            <separator string="Print only" colspan="4"/>
                            <field name="partner_ids" colspan="4" nolabel="1"/>
                        </page>
                    </notebook>
                    <separator string="Options" colspan="4"/>
                    <field name="amount_currency"/>
                    <field name="exclude_reconciled"/>
                    <field name="initial_balance" invisible="True"/>
                    <separator colspan="4"/>
                    <group col="4" colspan="4">
                        <button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
                        <button icon="gtk-print" name="check_report" string="Print" type="object" colspan="2" />
                    </group>
                </form>
            </field>
        </record>

        <record id="action_account_partners_ledger_menu_webkit" model="ir.actions.act_window">
            <field name="name">Partner Ledger Webkit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.report.partners.ledger.webkit</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_partner_ledger_view_webkit"/>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="action_account_partners_ledger_values_webkit">
            <field name="model_id" ref="account.model_account_account"/>
            <field name="object" eval="1"/>
            <field name="name">Partner Ledger Webkit</field>
            <field name="key2">client_print_multi</field>
            <field name="value"
                eval="'ir.actions.act_window,' +str(ref('action_account_partners_ledger_menu_webkit'))"/>
            <field name="key">action</field>
            <field name="model">account.account</field>
        </record>

        <menuitem icon="STOCK_PRINT" name="Partner Ledger (Webkit)"
            parent="account.next_id_22" action="action_account_partners_ledger_menu_webkit"
            groups="account.group_account_manager,account.group_account_user" id="account.menu_third_party_ledger"/>

    </data>
</openerp>
