<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="account_open_invoices_view_webkit" model="ir.ui.view">
            <field name="name">Open Invoices Report</field>
            <field name="model">account.report.open.invoices.webkit</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report Options">
                    <separator string="Open Invoices Report" colspan="4"/>
                    <label nolabel="1" colspan="4" string="This report allows you to print or generate a pdf of your open invoices per partner with details of all your payable/receivable account. Exclude full reconciled journal items."/>
                    <newline/>
                    <field name="chart_account_id" widget="selection" colspan="4"/>
                    <field name="fiscalyear_id" on_change="onchange_fiscalyear(fiscalyear_id, period_to, date_to, until_date)"/>
                    <field name="target_move"/>
                    <notebook tabpos="up" colspan="4">
                        <page string="Filters">
                            <field name="filter" on_change="onchange_filter(filter, fiscalyear_id)" colspan="4"/>
                            <separator string="Dates" colspan="4"/>
                            <field name="date_from" attrs="{'readonly':[('filter', '!=', 'filter_date')], 'required':[('filter', '=', 'filter_date')]}" colspan="4"/>
                            <field name="date_to" attrs="{'readonly':[('filter', '!=', 'filter_date')], 'required':[('filter', '=', 'filter_date')]}" colspan="4" on_change="onchange_date_to(fiscalyear_id, period_to, date_to, until_date)"/>
                            <separator string="Periods" colspan="4"/>
                            <field name="period_from" domain="[('fiscalyear_id', '=', fiscalyear_id), ('special', '=', False)]" attrs="{'readonly':[('filter','!=','filter_period')], 'required':[('filter', '=', 'filter_period')]}" colspan="4"/>
                            <field name="period_to" domain="[('fiscalyear_id', '=', fiscalyear_id), ('special', '=', False)]" attrs="{'readonly':[('filter','!=','filter_period')], 'required':[('filter', '=', 'filter_period')]}" colspan="4" on_change="onchange_period_to(fiscalyear_id, period_to, date_to, until_date)"/>
                        </page>
                        <page string="Partners Filters">
                            <field name="result_selection"/>
                            <separator string="Print only" colspan="4"/>
                            <field name="partner_ids" colspan="4" nolabel="1"/>
                        </page>
                        <page string="Layout Options">
                            <field name="amount_currency"/>
                        </page>
                    </notebook>
                    <separator string="Clearance Analysis Options" colspan="4"/>
                    <newline/>
                    <field name="until_date"/>
                    <separator colspan="4"/>
                    <group col="4" colspan="4">
                        <button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
                        <button icon="gtk-print" name="check_report" string="Print" type="object" colspan="2" />
                    </group>
                </form>
            </field>
        </record>

        <record id="action_account_open_invoices_menu_webkit" model="ir.actions.act_window">
            <field name="name">Open Invoices Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.report.open.invoices.webkit</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_open_invoices_view_webkit"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
