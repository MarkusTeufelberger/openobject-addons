            <field name="report_webkit">account_financial_report_webkit/report/templates/account_report_general_ledger.mako</field>
            <field name="webkit_header" ref="financial_landscape_header"/>
            <field name="attachment">u'General ledger '+time.strftime('%d-%m-%Y at %HH%M%s') </field>
            <field eval="1" name="attachment_use"/>
        </record>

