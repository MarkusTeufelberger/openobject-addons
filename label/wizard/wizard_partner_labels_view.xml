<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_wizard_partner_label_form" model="ir.ui.view">
            <field name="name">res.partner.label.form</field>
            <field name="model">res.partner.label</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
            <form string="Label Settings">
                <notebook colspan="4">
                    <page string="Basic settings">
                        <field name="label_format" select="1"/>
                        <field name="font_type"/>
                        <field name="font_size"/>
                    </page>
                    <page string="Extra settings">
                        <field name="printer_top"/>
                        <field name="printer_bottom"/>
                        <field name="printer_left"/>
                        <field name="printer_right"/>
                        <field name="first_row"/>
                        <field name="first_col"/>
                    </page>
                </notebook>
                <button string="Print Labels" type="object" name="do_print"/>
            </form>
            </field>
        </record>
        <act_window name="Labels" res_model="res.partner.label"
            src_model="res.partner" view_mode="form" target="new"
            key2="client_action_multi" id="act_partner_label" />
        <act_window name="Labels" res_model="res.partner.label"
            src_model="account.invoice" view_mode="form" target="new"
            key2="client_action_multi" id="act_partner_label_invoice" />
    </data>
</openerp>
