<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

<!-- product.product -->
        <record id="product_ingram_form_view" model="ir.ui.view">
            <field name="name">product.ingram.form</field>
            <field name="model">product.product</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="/form/group/group/field[@name='ean13']" position="after">
                    <field name="ingram_sku"/>
                    <field name="ean13_upc"/>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="ingram_product_normal_action">
            <field name="name">Ingram Products</field>
            <field name="res_model">product.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('ingram_sku', '!=', '')]</field>
        </record>

        <menuitem id="ingram_product" name="Ingram" parent="product.menu_products" action="ingram_product_normal_action" />
    </data>
</openerp>
