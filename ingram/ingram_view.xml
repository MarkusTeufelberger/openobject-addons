<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

<!-- ingram -->
        <record model="ir.ui.view" id="ingram_tree_view">
            <field name="name">Ingram Tree View</field>
            <field name="model">ingram</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="ingram">
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="ingram_form_view">
            <field name="name">Ingram Form View</field>
            <field name="model">ingram</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="ingram">
                    <group colspan="4">
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Ingram">
                            <field name="main_dir"/>
                            <field name="locale"/>
                            <group string="Files" col="8" colspan="4">
                                <field name="category_dir"/>
                                <field name="category_codification"/>
                                <field name="category_mapping_id"/>
                                <field name="category_id"/>
                                <newline/>
                                <field name="product_dir"/>
                                <field name="product_codification"/>
                                <field name="producttpl_mapping_id"/>
                                <field name="product_mapping_id"/>
<!--                                <newline/>-->
<!--                                <field name="stock_dir"/>-->
<!--                                <field name="product_codification"/>-->
<!--                                <field name="stock_mapping_id"/>-->
                            </group>
                        </page>
                        <page string="FTP">
                            <field name="ftp_ip" attrs="{'required':[('ftp','=',True)]}"/>
                            <newline/>
                            <field name="ftp_username" attrs="{'required':[('ftp','=',True)]}"/>
                            <field name="ftp_password" attrs="{'required':[('ftp','=',True)]}"/>
                            <button name="check_ftp" string="Check FTP" colspan="4" type="object"/>
                        </page>
                        <page string="Products">
                            <separator string="Exclude Products" colspan="4" />
                            <field name="product_ids" colspan="4" nolabel="1" domain="[('prod_ingram_sku','!=','')]" />
                        </page>
                    </notebook>
                    <button name="import_category" string="1 - Import Category" icon="gtk-ok" type="object" confirm="Are you sure import category? (remember see logs)"/>
                    <button name="import_product" string="2 - Import Product" icon="gtk-ok" type="object" confirm="Are you sure import products? (remember see logs)"/>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="ingram_action">
            <field name="name">Ingram Configuration</field>
            <field name="res_model">ingram</field>
            <field name="view_mode">tree,form</field>
            <field name="help">When you import Ingram values to OpenERP, remember see logs in your server. If you need more fields mapping CSV, into CSV File Fields you can add or customizate this fields</field>
        </record>

<!-- Menus -->
        <menuitem id="ingram_configuration" name="IngramMicro Configuration" parent="product.prod_config_main" action="ingram_action"/>

    </data>
</openerp>
