<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="mrp_property_group_form_view_add_properties" model="ir.ui.view">
            <field name="name">mrp.property.group.form.add_prperties</field>
            <field name="model">mrp.property.group</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="mrp.mrp_property_group_form_view"/>
            <field name="arch" type="xml">
                <field name="description" position="after">
                    <field name="property_ids" colspan="4" nolabel="1"/>
                </field>
            </field>
        </record>

        <record id="mrp_property_tree_view_add_code_field" model="ir.ui.view">
            <field name="name">mrp.property.tree.add_code_field</field>
            <field name="model">mrp.property</field>
            <field name="inherit_id" ref="mrp.mrp_property_tree_view"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="code"/>
                </field>
            </field>
        </record>

        <record id="mrp_property_form_view_add_code_field" model="ir.ui.view">
            <field name="name">mrp.property.form.add_code_field</field>
            <field name="model">mrp.property</field>
            <field name="inherit_id" ref="mrp.mrp_property_form_view"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="name" position="replace">
                    <field name="name" select="1"/>
                    <field name="code" select="1"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
