<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
	<!-- product.pricelist.item -->
	<record id="product_pricelist_item_form_view_rounding_mode" model="ir.ui.view">
		<field name="name">product.pricelist.item.form.rounding_mode</field>
		<field name="model">product.pricelist.item</field>
		<field name="type">form</field>
		<field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
		<field name="arch" type="xml">
			<field name="price_max_margin" position="after">
				<field name="rounding_mode"/>
			</field>
		</field>
	</record>
	<record model="ir.ui.view" id="product_pricelist_item_form_extended">
		<field name="name">product.pricelist.item.extended</field>
		<field name="model">product.pricelist.item</field>
		<field name="type">form</field>
		<field name="inherit_id" ref="product.product_pricelist_item_form_view" />
		<field name="arch" type="xml">
			<field name="base_pricelist_id" position="replace">
				<field name="category_id" />
				<group colspan="4" attrs="{'invisible':[('base','not in',[-1])]}">
					<separator string="Dependency Properties" colspan="4" />
					<field name="base_pricelist_id" attrs="{'required': [('base','=',-1)], 'readonly':[('base','!=',-1)]}" />
					<field name="base_itemrule_id" attrs="{'readonly':[('base','!=',-1)]}" context="{'ruleitem_id':active_id}" />
				</group>
				<separator string="Price Properties" colspan="4"/>
			</field>
		</field>
	</record>

	<!-- product.pricelist -->
	<record id="product_pricelist_view_tree_extended" model="ir.ui.view">
		<field name="name">product.pricelist.extendedtree</field>
		<field name="model">product.pricelist</field>
		<field name="type">tree</field>
		<field name="inherit_id" ref="product.product_pricelist_view_tree" />
		<field name="arch" type="xml">
			<field name="type" position="after">
				<field name="category_id" select="1"/>
			</field>
		</field>
	</record>
	<record id="product_pricelist_view_extended" model="ir.ui.view">
		<field name="name">product.pricelist.extended.form</field>
		<field name="model">product.pricelist</field>
		<field name="inherit_id" ref="product.product_pricelist_view" />
		<field name="type">form</field>
		<field name="arch" type="xml">
			<field name="active" select="1" position="after">
				<field name="category_id" select="1" />
			</field>
		</field>
	</record>
</data>
</openerp>

