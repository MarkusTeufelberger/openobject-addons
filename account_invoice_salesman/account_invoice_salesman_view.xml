<?xml version="1.0"?>
<openerp>
<data>

    #---------------------------------------------------------
    # Add the salesman to invoices
    #---------------------------------------------------------

    <record model="ir.ui.view" id="view_account_invoice_supplier_form">
        <field name="name">account.invoice.supplier_salesman.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="user_id" readonly="True"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_invoice_form">
        <field name="name">account.invoice.salesman.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="user_id" readonly="True"/>
            </field>
        </field>
    </record>

</data>
</openerp>
