<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="etl_component_sleep_form" model="ir.ui.view">
			<field name="name">etl.component.sleep.form</field>
			<field name="model">etl.component</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="etl_component_form"/>
			<field name="arch" type="xml">
					<notebook position='inside'>
						<page string="Other Information" attrs="{'invisible':[('type_id','!=','control.sleep')]}">
							<field name="delay" />
						</page>
					</notebook>
			</field>
		</record>

		<record id="action_etl_component_sleep_tree"
			model="ir.actions.act_window">
			<field name="name">Sleep Component</field>
			<field name="res_model">etl.component</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('type_id.name','=','control.sleep')]</field>
            <field name="context">{'type_id':'control.sleep'}</field>
		</record>

		<record id="action_etl_component_sleep_from"
			model="ir.actions.act_window">
			<field name="res_model">etl.component</field>
			<field name="view_type">form</field>
			<field name="view_mode">form,tree</field>
			<field name="domain">[('type_id.name','=','control.sleep')]</field>
            <field name="context">{'type_id':'control.sleep'}</field>
			<field name="view_id" ref="etl_component_sleep_form" />

		</record>

		<record id="action_etl_component_sleep_view1"
			model="ir.actions.act_window.view">
			<field eval="1" name="sequence" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="etl_interface.etl_component_tree" />
			<field name="act_window_id" ref="action_etl_component_sleep_tree" />

		</record>
		<record id="action_etl_component_sleep_view2"
			model="ir.actions.act_window.view">
			<field eval="2" name="sequence" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="etl_component_sleep_form" />
			<field name="act_window_id"
				ref="action_etl_component_sleep_tree" />
		</record>

		<menuitem name="Sleep"
			parent="etl_interface.menu_etl_jd_c_control_form"
			action="action_etl_component_sleep_tree"
			id="menu_etl_jd_c_pec__sleep_form" />

	</data>
</openerp>