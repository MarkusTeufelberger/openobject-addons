<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="etl_connector_facebook_form" model="ir.ui.view">
			<field name="name">etl.connector.facebook.form</field>
			<field name="model">etl.connector</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="etl_interface.etl_connector_basic_form"/>
			<field name="arch" type="xml">
				<notebook position='inside'>
					<page string="Other Information" attrs="{'invisible':[('type','!=','facebook')]}">
						<field name="email" attrs="{'required':[('type','=','facebook')]}"/>
						<field name="delay"/>
					</page>
				</notebook>
			</field>
		</record>



		<record id="action_etl_connector_facebook_tree"
			model="ir.actions.act_window">
			<field name="name">Facebook Connectors</field>
			<field name="res_model">etl.connector</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('type','=','facebook')]</field>
			<field name="view_id"
				ref="etl_interface.etl_connector_basic_tree" />
		</record>

		<record id="action_etl_connector_facebook_view1"
			model="ir.actions.act_window.view">
			<field eval="1" name="sequence" />
			<field name="view_mode">tree</field>
			<field name="view_id"
				ref="etl_interface.etl_connector_basic_tree" />
			<field name="act_window_id"
				ref="action_etl_connector_facebook_tree" />
		</record>

		<record id="action_etl_connector_facebook_view2"
			model="ir.actions.act_window.view">
			<field eval="2" name="sequence" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="etl_connector_facebook_form" />
			<field name="act_window_id"
				ref="action_etl_connector_facebook_tree" />
		</record>

		<menuitem name="Facebook Connector"
			parent="etl_interface.etl_connector_all_tree"
			action="action_etl_connector_facebook_tree"
			id="menu_facebook_connector" />

	</data>
</openerp>

