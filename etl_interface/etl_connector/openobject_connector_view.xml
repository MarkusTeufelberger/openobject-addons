<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="etl_connector_openobject_form" model="ir.ui.view">
			<field name="name">etl.connector.openobject.form</field>
			<field name="model">etl.connector</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="etl_interface.etl_connector_basic_form"/>
			<field name="arch" type="xml">
				<notebook position='inside'>
						<page string="Other Information" attrs="{'invisible':[('type','!=','openobject')]}">
							<field name="db" attrs="{'required':[('type','=','openobject')]}"/>
							<field name="obj" attrs="{'required':[('type','=','openobject')]}"/>
							<field name="openobject_con_type" attrs="{'required':[('type','=','openobject')]}"/>
						</page>
					</notebook>
			</field>
		</record>



		<record id="action_etl_connector_openobject_tree"
			model="ir.actions.act_window">
			<field name="name">Openobject Connectors</field>
			<field name="res_model">etl.connector</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('type','=','openobject')]</field>
			<field name="view_id"
				ref="etl_interface.etl_connector_basic_tree" />
		</record>

		<record id="action_etl_connector_openobject_view1"
			model="ir.actions.act_window.view">
			<field eval="1" name="sequence" />
			<field name="view_mode">tree</field>
			<field name="view_id"
				ref="etl_interface.etl_connector_basic_tree" />
			<field name="act_window_id"
				ref="action_etl_connector_openobject_tree" />
		</record>

		<record id="action_etl_connector_openobject_view2"
			model="ir.actions.act_window.view">
			<field eval="2" name="sequence" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="etl_connector_openobject_form" />
			<field name="act_window_id"
				ref="action_etl_connector_openobject_tree" />
		</record>

		<menuitem name="Open Object Connector"
			parent="etl_interface.etl_connector_all_tree"
			action="action_etl_connector_openobject_tree"
			id="connector_openobject_control" />

	</data>
</openerp>

