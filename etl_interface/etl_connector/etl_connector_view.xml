		<record id="etl_connector_basic_form" model="ir.ui.view">
			<field name="name">etl.connector.basic.form</field>
			<field name="model">etl.connector</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="etl.connector">
					<group colspan="4">
						<field name="name" select="1" />
						<field name="type" select="1"
							on_change="onchange_type(type)" />
					</group>
					<notebook colspan="4">
						<page string="Property">
							<field name="uri"/>
							<field name="host"/>
							<field name="port"/>
							<field name="uid"/>
							<field name="passwd" password="1"/>
						</page>
						<page string="Other Information"  attrs="{'invisible':[('type','!=',False)]}"/>
                    </notebook>
				</form>
			</field>
		</record>


		<record id="etl_connector_basic_tree" model="ir.ui.view">
			<field name="name">etl.connector.basic.tree</field>
			<field name="model">etl.connector</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Connector">
					<field name="name" select="1" />
					<field name="type" select="1" />
				</tree>
			</field>
		</record>

