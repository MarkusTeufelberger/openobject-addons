<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record model="ir.ui.view" id="poweremail_send_wizard_form">
			<field name="name">poweremail.send.wizard.form</field>
			<field name="model">poweremail.send.wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Send mail Wizard">
					<group col="4" colspan="4">
						<field name="rel_model" colspan="2" />
						<field name="from" required="1" colspan="2" />
					</group>
					<group col="4" colspan="4" attrs="{'invisible':[('state','!=','single')]}">
						<group col="6" colspan="4">
							<field name="to" select="1" colspan="4" />
							<newline />
							<field name="cc" select="2" colspan="4" />
							<newline />
							<field name="bcc" select="2" colspan="4" />
							<newline />
							<field name="subject" select="2" colspan="4" attrs="{'required':[('state','=','single')]}" />
							<newline />
							<field name="report" colspan="4" />
						</group>
						<separator string="" colspan="4" />
						<notebook>
							<page string="Body (Plain Text)">
								<field name="body_text" select="2" colspan="4" nolabel="1" />
							</page>
							<page string="Body(HTML - Only Web Client)">
								<field name="body_html" select="2" colspan="4" nolabel="1" widget="text_html" />
							</page>
						</notebook>
						<field name="signature" colspan="4" />
						<button name="sav_to_drafts" string="Save in Drafts" type="object" />
						<button name="send_mail" string="Send now" type="object" />
						<button special="cancel" string="Discard Mail" />
					</group>
					<group col="4" colspan="4" attrs="{'invisible':[('state','=','single')]}">
						<field name="requested" />
						<field name="generated" />
						<button name="_get_generated" string="Send all mails" type="object" states="multi" colspan="2" />
						<button special="cancel" string="Discard Mail" colspan="2" states="multi" />
					</group>
					<button special="cancel" string="Close" colspan="4" states="done" />
					<field name="state" />
					<newline />
					<label string="After clicking send all mails, mails will be sent to outbox and cleared in next Send/Recieve" />
				</form>
			</field>
		</record>
	</data>
</openerp>

