<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_replace_product_wizard" model="ir.ui.view">
            <field name="name">Replace product</field>
            <field name="model">replace.product</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Replace Product">
                    <separator string="Choose the product that will replace the current one.                            " colspan="4"/>
                    <field name="product_id"/>
                    <button icon='gtk-cancel' special="cancel"
                        string="_Cancel" />
                    <button name="replace" string="Ok"
                        type="object" icon="gtk-ok" />
                    <separator string=" " colspan="4"/>
            </form>
            </field>
        </record>
        <record id="replace_product" model="ir.actions.act_window">
            <field name="name">Replace product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">replace.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
    </data>
</openerp>
