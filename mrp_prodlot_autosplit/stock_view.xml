		<record model="ir.ui.view" id="view_picking_out_form_manual_split">
			<field name="name">stock.picking.out.form.manual_split</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_out_form" />
			<field name="type">form</field>
			<field name="arch" type="xml">
                <button string="Split in production lots" position="after">
                    <separator colspan="4" string="Split"/>
                    <button name="split_move_in_single" string="Split move line in single units" type="object"/>
                </button>
			</field>
		</record>

		<record model="ir.ui.view" id="view_picking_in_form_manual_split">
