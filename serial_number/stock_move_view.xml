<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data> 

    <record id="stock_move_form_view_sn_inherit" model="ir.ui.view">
        <field name="name">stock.move.form.sn.inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_form"/>
        <field name="arch" type="xml">
        <field name="prodlot_id" position="replace">
            <field name="sn_ids" context="{'location_id':location_id, 'product_id':product_id}" domain="[('product_id','=',product_id)]"/>
        </field>
        </field>
    </record>

