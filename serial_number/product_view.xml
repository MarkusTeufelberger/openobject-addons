<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <record id="product_template_form_view_sn_inherit" model="ir.ui.view">
        <field name="name">Product template | add sn_required, sequence_sn_id</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <group name="uos" position="after">
                <group colspan="2" col="2" name="uom">
                    <separator string="Serial number fields" colspan="2"/>
                    <field name="sn_required"/>
                    <field name="sequence_sn_id"/>
                </group>
            </group>
        </field>
    </record>

    <record id="product_normal_form_view_sn_inherit" model="ir.ui.view">
        <field name="name">product.normal.form.sn.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock.view_normal_stock_property_form"/>
        <field name="arch" type="xml">
        <field name="track_production" position="before">
            <field name="sn_required"/>
            <field name="sequence_sn_id"/>
        </field>
        </field>
    </record>

    </data>
</openerp>
