<?xml version="1.0" ?>
<openerp>
<data>

    <record model="ir.ui.view" id="cci_view_partner_job_tree">
        <field name="name">res.partner.job.tree</field><!--cci.view.partner.job - Jobs CCI-->
        <field name="model">res.partner.job</field>
        <field name="type">tree</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Fonctions des contacts">
                <field name="sequence_partner" string="Séq./Part."/>
                <field name="contact_id"/>
                <field name="function_code_label"/>
                <field name="function_label"/>
                <field name="name"/>
                <field name="address_id"/>
                <field string="Téléphone" name="phone" on_change="on_change_phone_num(phone)"/>
                <field name="mobile_contact" string="GSM"/>
                <field string="Email pro" name="email"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="cci_view_partner_job_form" >
        <field name="name">res.partner.job.form</field><!--cci.view.partner.job - Jobs CCI-->
        <field name="model">res.partner.job</field>
        <field name="type">form</field>
        <field name="priority">4</field>
        <field name="arch" type="xml">
            <form string="Fonctions des contacts">
                <notebook colspan="4">
                    <page string="Général">
                        <field name="contact_id" select="1"/>
                        <field string="E-Mail professionnel" name="email" widget="email" select="1"/>
                        <field name="function_label" select="1"/>
                        <field name="function_code_label" select="1"/>
                        <field name="name" select="1"/>
                        <field name="phone" on_change="on_change_phone_num(phone)"/>
                        <field name="address_id" select="1"/>
                        <field name="fax"/>
                        <field name="date_start"/>
                        <field name="sequence_partner"/>
                        <field name="date_stop"/>
                        <field name="sequence_contact"/>
                        <field name="magazine_subscription" select="1"/>
                        <field name="sequence_yearbook"/>
                        <field name="magazine_subscription_source" select="1"/>
                        <field name="sequence_directory"/>
                        <!--<label string="" colspan="2"/>
                        <group colspan="2" col="10"><label string="-&gt;" colspan="8" align="1.0"/><field name="dir_presence"/></group>-->
                        <label string="" colspan="2"/>
                        <group colspan="2" col="12"><label string="-&gt;" colspan="10" align="1.0"/><field name="active" select="2"/></group>
                    </page>
                    <page string="Tags">
                        <button string="Use a questionnaire" name="%(crm_profiling.wizard_open_questionnaire)d" type="action" colspan="1"/>
                        <newline/>
                        <field name="answers_ids" colspan="4" nolabel="1"/>
                    </page>
                </notebook>
            </form>
        </field>
    </record>
        
</data>
</openerp>
