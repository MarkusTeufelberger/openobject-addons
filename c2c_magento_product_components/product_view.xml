<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <record model="ir.ui.view" id="product_custom_product_components">
        <!-- must be unique in this module. -->
        <field name="name">product.normal.form.custom.inherit</field>
        <field name="model">product.product</field>
        <!--parent python entity -->
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <!-- modulename.view -->
        <field name="type">form</field>
        <field name="arch" type="xml">
            <page string="Information" position="inside">
                <group colspan="2" col="2" name="magento">
                    <separator string="Magento components" colspan="2"/>
                    <field name="components_lists" />
                 </group>            
            </page>            
            
        </field>
    </record>
    </data>
</openerp>
