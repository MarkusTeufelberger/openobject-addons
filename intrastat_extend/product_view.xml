<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Product -->
        <record id="report_intrastat.product_normal_form_view" model="ir.ui.view">
            <field name="name">product.normal.form.add_intrastat</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="product_manager" position="after">
                    <field name="intrastat_id" on_change="onchange_intrastat_id(intrastat_id)"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="product_template_form_view_add_intrastat_field">
            <field name="name">product.template.form.view.add_intratat_field</field>
            <field name="model">product.template</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <field name="product_manager" position="after">
                    <field name="intrastat_id" on_change="onchange_intrastat_id(intrastat_id)"/>
                </field>
            </field>
        </record>

    </data>
</openerp>