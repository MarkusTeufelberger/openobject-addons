<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <!--
        Partners Extension
        -->

        <record id="view_expenses_supplier_form" model="ir.ui.view">
            <field name="name">hr.expense.supplier.form</field>
            <field name="model">hr.expense.expense</field>
            <field name="type">form</field>
            <field name="priority">30</field>
            <field name="inherit_id" ref="hr_expense.view_expenses_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/notebook/page/field/form/field[@name='analytic_account']" position="after">
                    <field name="partner_id" domain="[('supplier','=', 1)]"/>
                </xpath>
            </field>
        </record>

        <record id="view_expenses_supplier_line_tree" model="ir.ui.view">
            <field name="name">hr.expense.supplier.line.tree</field>
            <field name="model">hr.expense.line</field>
            <field name="type">tree</field>
            <field name="priority">30</field>
            <field name="inherit_id" ref="hr_expense.view_expenses_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='analytic_account']" position="after">
                    <field name="partner_id"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
