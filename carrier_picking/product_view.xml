<?xml version="1.0" ?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_product_product_port_form">
            <field name="name">product.product.port.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="/form/notebook/page[@string='Information']/group[@name='uos']" position="after">
                    <group colspan="2" col="2" name="porte">
                        <separator string="Shipping" colspan="2"/>
                        <field name="shipping"/>
                        <group colspan="4" col="4" attrs="{'invisible':[('shipping','!=', True)]}">
                            <group colspan="4" col="4">
                                <field name="from_zip"/>
                                <field name="from_city" attrs="{'required':[('shipping','=', True)]}"/>
                                <field name="from_country_id"/>
                                <field name="from_state_id"/>
                            </group>
                            <group colspan="4" col="4">
                                <field name="to_zip"/>
                                <field name="to_city" attrs="{'required':[('shipping','=', True)]}"/>
                                <field name="to_country_id"/>
                                <field name="to_state_id"/>
                            </group>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>

