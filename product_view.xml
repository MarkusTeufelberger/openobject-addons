<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
		<record model="ir.ui.view" id="product_fiscal_classification_normal_form_view_form">
			<field name="name">product_fiscal_classification_normal_form_view_form</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="product.product_normal_form_view"/>
			<field name="arch" type="xml">
				<xpath expr="/form/notebook" position="before">
					<field name="fiscal_classification_id" required="1" select="2" on_change="fiscal_classification_id_change(fiscal_classification_id)"/>
				</xpath>
			</field>
		</record>
		
		<record model="ir.ui.view" id="fiscal_classification_normal_form_view_form">
			<field name="name">fiscal_classification_normal_form_view_form</field>
			<field name="model">account.product.fiscal.classification</field>
			<field name="arch" type="xml">
				<form string="Fiscal Classification">
					<field name="name"/>
					<field name="description"/>
					<field name="sale_base_tax_ids"/>
					<field name="purchase_base_tax_ids"/>
				</form>
			</field>
		</record>
	
	</data>
</openerp>