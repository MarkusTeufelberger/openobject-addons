<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>   
         
        <record id="view_c2c_scan_product" model="ir.ui.view">
            <field name="name">Scan product</field>
            <field name="model">c2c.scan.product</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Scan product">
                    <group col="2" colspan="4">
                        <label string="Bar Code Scan" colspan="4"/>
                        <field name="barcode" colspan="4" nolabel="1"/>
                    </group>
                    <group col="3" colspan="4">                                            
                        <button icon='gtk-cancel' name="cancel_scan"
                            string="Close" type="object" />
                        <button name="make_partial" string="Make Partial"
                            colspan="1" type="object" icon="gtk-ok" />
                        <button name="scan" string="Add Produce"
                            colspan="1" type="object" icon="gtk-apply" />
                    </group>
                </form>
            </field>
        </record>
        
        <act_window name="Scan Product"
            res_model="c2c.scan.product"
            src_model="stock.picking"
            view_mode="form"
            target="new"
            context="{'record_id' : active_id}" 
            id="action_c2c_scan_product"/>
        
    </data>
</openerp>          